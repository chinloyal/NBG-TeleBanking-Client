<?xml version="1.0" encoding="UTF-8"?>
<Configuration monitorinterval="30" status="info" strict="true">
    <Properties>
        <Property name="loggerLocation">logs/server.log</Property>
    </Properties>
    <Appenders>
        <!-- General Appenders -->
        <Appender type="Console" name="ConsoleAppender">
        	<Layout type="PatternLayout" pattern="%d %p %C [%t] %m%n" ></Layout>
        </Appender>
        <Appender type="File" name="FileAppender" fileName="${loggerLocation}">
        	<Layout type="PatternLayout" pattern="%d %p %C [%t] %m%n" />
        </Appender>
    </Appenders>
    <Loggers>
        <Root level="debug">
        	<AppenderRef ref="ConsoleAppender" />
        	<AppenderRef ref="FileAppender" />
        </Root>
    </Loggers>
</Configuration>